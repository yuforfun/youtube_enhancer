{
    "manifest_version": 3,
    "name": "YouTube 字幕增強器",
    "version": "1.3.0",
    "description": "即時攔截並翻譯 YouTube 日文字幕，提供自訂化選項。",
    "permissions": [
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["content.js"],
            "css": ["style.css"],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["injector.js"],
            "matches": ["https://www.youtube.com/*"]
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}